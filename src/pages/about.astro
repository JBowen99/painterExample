---
import FadeIn from '~/components/effects/FadeIn.astro';
import Button from '~/components/ui/Button.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

import Image from '~/components/common/Image.astro';
import Hero2 from '~/components/widgets/Hero2.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <div class="mt-44 lg:ml-10 mb-32">
    <Hero2
      tagline=""
      image={{
        src: 'https://images.pexels.com/photos/9222185/pexels-photo-9222185.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
        alt: 'Painting supplies',
        width: '500',
      }}
    >
      <Fragment slot="title">
        <div class="text-4xl">About Us</div>
      </Fragment>

      <Fragment slot="subtitle">
        We're a <span class="text-[#ff5555]">family owned painting business</span> with a passion for <span
          class="text-[#ff5555]">perfection.</span
        >
        <br /> At Paint Pros, we believe that every space deserves to look its best, whether it's a cozy home or a bustling
        office. <br /><br /> With over 30 of experience in the painting industry, weâ€™ve mastered the art of transforming
        interiors and exteriors with precision, passion, and professionalism. Our team of skilled painters is dedicated to
        delivering top-tier craftsmanship using premium materials, ensuring your property stands out with a flawless finish.
        <br /><br />What sets us apart? We listen closely to your vision and bring it to life with meticulous attention
        to detail. From color consultations to the final brushstroke, Paint Pros is committed to making your painting
        project as smooth and stress-free as possible. Trust us to deliver excellence, on time and within budget, every
        time.
      </Fragment>
    </Hero2>
  </div>
  <!-- CallToAction Widget *********** -->
  <FadeIn delay={300}>
    <CallToAction>
      <Fragment slot="actions">
        <Button class="btn-shiny" href="/contact">Contact Us</Button>
      </Fragment>

      <Fragment slot="title">
        Ready to add some color to your next project?<br class="block sm:hidden" /><span class="sm:whitespace-nowrap"
        ></span>
      </Fragment>

      <Fragment slot="subtitle">
        Let us know and get started now!<br class="hidden md:inline" />
      </Fragment>
    </CallToAction>
  </FadeIn>
</Layout>
