---
import Layout from '~/layouts/PageLayout.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

//import Image from 'astro/components/Image.astro';
import Image from '~/components/common/Image.astro';

import LogoImage from '~/assets/logo.svg';
import PerformanceImage from '~/assets/images/performance.png';
import HeroText from '~/components/widgets/HeroText.astro';
import Button from '~/components/ui/Button.astro';

import '@fontsource-variable/cinzel';
import FadeIn from '~/components/effects/FadeIn.astro';

const metadata = {
  title: 'Silver Stag Studios - Building Modern Digital Legacies',
  ignoreTitleTemplate: true,
};

import TreesSVG from '~/assets/trees.svg';
import Features from '~/components/widgets/Features.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
---

<Layout metadata={metadata}>

  <div class="flex flex-col justify-center w-full">
    <div class="relative z-10 p-4">
      <div class="flex justify-center mt-10">
        <div class="w-1/3 flex justify-center">
          <Image src={LogoImage} alt="Silver Stag Studios Logo" width={250} />
        </div>
      </div>

      <HeroText>

        <Fragment slot="subtitle"><span class="text-lg font-nomral">Your Go-To Painter Professionals</span></Fragment>
      </HeroText>

      <div class="flex flex-row justify-center space-x-3">
        <Button text="Get A Quote" variant="secondary" class="bg-white dark:bg-transparent btn-grow" href="/contact" />
        <Button text="About Us" variant="secondary" class="bg-white dark:bg-transparent btn-grow" href="/about" />
      </div>
    </div>
  </div>

  <br />

  <!-- Features2 Widget *************** -->
  <Features2
    id="features"
    tagline=""
    title="What We Do"
    subtitle="Our team handcrafts modern, professional, and performant websites."
    items={[
      {
        title: 'Exterior Painting',
        description: 'We do exterior painting for both businesses and homes',
        icon: 'tabler:paint',
      },
      {
        title: 'Interior Painting',
        description: 'We do interior painting, helping you get the perfect color for all your walls',
        icon: 'tabler:color-swatch',
      },
      {
        title: 'Cabinet Repainting',
        description: 'Do you have cabinets that need work? We do that too!',
        icon: 'tabler:brush',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Features
    tagline=""
    title="What We Offer"
    items={[
      {
        title: 'Custom Designed',
        description:
          'Each website is coded by hand, no web builders or WordPress, leading to unique designs and less bloat',
        icon: 'tabler:check',
      },
      {
        title: 'Fast Pages',
        description: 'Custom code means that our websites load quickly and score 95-100/100 when evaluated with Google',
        icon: 'tabler:check',
      },
      {
        title: 'Cross-browser compatibility',
        description:
          'Ensure your website looks and functions consistently across various web browsers and devices, delivering a seamless experience to all users.',
        icon: 'tabler:check',
      },
      {
        title: 'Hosting and Support',
        description: 'We can handle domain names, hosting, updates, and support. ',
        icon: 'tabler:check',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Modern Businesses Need Modern Websites
      </h3>
      Stand out from competitors, gain new customers, and provide high quality experiences
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 shadow-lg rounded-xl mx-3 md:mx-10 mb-3 p-5 dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <Content
    tagline=""
    title="Why It Matters"
    items={[
      {
        title: 'User Retention',
        description: 'Faster websites lead to more users, traffic, and conversion rates',
        icon: 'tabler:users-group',
      },
      {
        title: 'Better SEO',
        description: 'Rank higher in Google searches with a faster website',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Great Experience',
        description: 'With a low load time, users are more likely to enjoy viewing your site',
        icon: 'tabler:click',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Custom Websites Win</h3>
      Stand out from competitors, gain new customers, and provide high quality experiences
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 shadow-lg rounded-xl mx-3 md:mx-10 p-5 dark:bg-transparent"></div>
    </Fragment>

    <Fragment slot="image">
      <Image
        src={PerformanceImage}
        class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg"
        width={350}
        height={400}
        widths={[800]}
        alt="Website Performance"
        layout="cover"
      />
    </Fragment>
  </Content>

  <Testimonials
    title="Hear from our Customers"
    testimonials={[
      {
        testimonial: `We hired Paint Pros to update the interior of our home, and we couldn’t be happier! The team was professional, detail-oriented, and left everything spotless. Our living room looks brand new, and the fresh color has completely transformed our space. Highly recommend them for any interior work!`,
        name: 'Cary Kennedy',
        job: 'Local Home',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Cary Kennedy Image',
        },
      },
      {
        testimonial: `The crew did a fantastic job painting the exterior of our house. They were punctual, efficient, and the quality of their work is outstanding. Our house looks amazing, and we’ve already received so many compliments from neighbors. If you need exterior painting, this is the team to call!`,
        name: 'Josh Wilkinson',
        job: 'Local Home',
        image: {
          src: 'https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Josh Wilkinson Image',
        },
      },
      {
        testimonial:
          'We recently had our office repainted by this company, and they did a phenomenal job. They worked around our schedule to minimize disruptions, and the result was impeccable. The new paint has given our business a fresh, welcoming look. I couldn’t be more pleased with their work!',
        name: 'Sidney Hansen',
        job: 'Local Business',
        image: {
          src: 'https://images.unsplash.com/photo-1512361436605-a484bdb34b5f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Sidney Hansen Image',
        },
      },
    ]}
    callToAction={{
      text: 'See More Of Our Projects',
      href: '/portfolio',
      icon: 'tabler:chevron-right',      
    }}
  />

  <!-- CallToAction Widget *********** -->
  <FadeIn delay={300}>
    <CallToAction>
      <Fragment slot="actions">
        <Button class="btn-shiny" href="/contact">Contact Us</Button>
      </Fragment>

      <Fragment slot="title">
        Interested in a better website?<br class="block sm:hidden" /><span class="sm:whitespace-nowrap"></span>
      </Fragment>

      <Fragment slot="subtitle">
        Lets build something great together - Get started now!<br class="hidden md:inline" />
      </Fragment>
    </CallToAction>
  </FadeIn>
</Layout>
